rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colecci贸n de usuarios
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Helper function para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Colecci贸n de clubs - solo lectura para usuarios autenticados
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      // Solo el admin puede escribir
      allow write: if isAdmin();

      // Subcolecci贸n de courts
      match /courts/{courtId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();

        // Subcolecci贸n de bookings
        match /bookings/{bookingId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null;
          allow update: if request.auth != null && (
            // Owner can update their own booking
            request.auth.uid == resource.data.userId ||
            // Anyone can add a join request to a shareable booking
            (resource.data.sharingEnabled == true && 
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['joinRequests'])) ||
            // Owner can approve/reject requests (modify sharedWith and joinRequests)
            (request.auth.uid == resource.data.userId &&
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['joinRequests', 'sharedWith'])) ||
            // Admin can do anything
            isAdmin()
          );
          allow delete: if isAdmin();
        }
      }
    }
  }
}